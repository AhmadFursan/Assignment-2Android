<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ahmadfursan.calculator.Main"
    >
    <TextView
        android:id="@+id/text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:textSize="70px"
        android:text="0"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:id="@+id/c"
            android:text="C"
            />
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:id="@+id/mc"
            android:text="MC"
            />
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:id="@+id/mr"
            android:text="MR"
            />
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:id="@+id/mplus"
            android:text="M+"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
        <Button
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight=".50"
            android:textAllCaps="false"
            android:id="@+id/back"
            android:text="Back"
            />
        <Button
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:textAllCaps="false"
            android:id="@+id/n"
            android:text="N"
            />
        <Button
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:textAllCaps="false"
            android:id="@+id/div"
            android:text="รท"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:id="@+id/seven"
            android:text="7"
            />
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:id="@+id/eight"
            android:text="8"
            />
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:id="@+id/nine"
            android:text="9"
            />
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:id="@+id/mul"
            android:text="ร"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:id="@+id/four"
            android:text="4"
            />
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:id="@+id/five"
            android:text="5"
            />
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:id="@+id/six"
            android:text="6"
            />
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:id="@+id/minus"
            android:text="-"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:id="@+id/one"
            android:text="1"
            />
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:id="@+id/tow"
            android:text="2"
            />
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:id="@+id/three"
            android:text="3"
            />
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:id="@+id/plus"
            android:text="+"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
        <Button
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight=".75"
            android:textAllCaps="false"
            android:id="@+id/zero"
            android:text="0"
            />
        <Button
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:textAllCaps="false"
            android:id="@+id/equal"
            android:text="="
            />
        </LinearLayout>
</LinearLayout>
